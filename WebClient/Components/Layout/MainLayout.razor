@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider IsDarkMode="_darkMode" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((pippo) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Application</MudText>
        <MudSpacer />
        <MudIconButton @ref="iconButton" Icon="@(_darkMode? @Icons.Material.Filled.LightMode : @Icons.Material.Filled.DarkMode)" OnClick="ToggleDarkMode" />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
            <MudNavLink Href="/tasks" Match="NavLinkMatch.Prefix">Task list</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    bool _drawerOpen = true;
    bool _darkMode = true;

    string icon = Icons.Material.Filled.DarkMode;

    MudIconButton iconButton;

    void ToggleDarkMode()
    {
        _darkMode = !_darkMode;
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
